- active_tab ||= :last
- widget_path ||= request.url
%ul.unstyled.tabs.dark-links{:data => {:tabs => ""}}
  - with_options :data => {:toggle => "tab"} do |bldr|
    - %w(last best comments).each do |tab|
      %li{:class => "widgtb#{' active' if active_tab == tab.to_sym}"}= bldr.link_to t(".#{tab}"), url_for(:tab => tab)
