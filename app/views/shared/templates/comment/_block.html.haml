%article{:class => "post indent-#{@element.depth}", :id => @element.slug}
  .comment
    = @element.message.to_textile.html_safe
  .postinfo
    %a{:href => '#'}><
      %i.icon-user>
      = @element.owner.name
    = " / "
    %span
      %time.pos-r{:datetime => @element.created_at}= l(@element.created_at, :format => :long)
    = " / "