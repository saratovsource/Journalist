%li.dropdown
  = link_to '#', :class=> "creat dropdown-toggle", :data=>{:toggle => "dropdown", :target => "#"} do
    = content_tag(:strong, t(:create), :class => "icon new")
  %ul.dropdown-menu
    = drop_down_menu_item JournalRubric.model_name.human, "journal_rubric", empty_godmode_journal_rubrics_url if can? :create, JournalRubric
    = drop_down_menu_item JournalArticle.model_name.human, "journal_article", empty_godmode_journal_articles_url if can? :create, JournalArticle
    %li.divider
    = drop_down_menu_item ColumnArticle.model_name.human, "column_article",  empty_godmode_column_articles_url if current_account.column.present?
    = drop_down_menu_item Face.model_name.human, "face", empty_godmode_faces_url if can?(:create, Face)
    = drop_down_menu_item Reportage.model_name.human, "reportage", empty_godmode_reportages_url if can?(:create, Reportage)
