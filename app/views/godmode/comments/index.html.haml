= render :partial => "/godmode/shared/headers/index_header", :locals => {:create_type => Comment.model_name.parameterize}

- unless has_column?
  = render :partial => "empty"
- else
  %table.listingtable.zebra-striped.t-sort
    = render :partial => "godmode/shared/headers/sorted_header", :locals => {:columns => %w(comment data), :rejected => ""}
    %tbody
      - collection.each do |comment|
        %tr
          %td
          %td
            %p.author-comment
              = link_to comment.owner.name, comment.owner.profile.fullpath
              &rarr;
              = link_to comment.root.commentable.title, comment.commentable.fullpath
              &nbsp;
              %span{:title => t('.comments_count')}
                %small.iconweb.comment-count c
                = comment.root.commentable.comments_count
            = comment.message.truncate(200)
            %small= link_to "D", comment.fullpath, :class => "iconweb new-window dark-link"
            %p
          %td= l(comment.created_at, :format => :long)
